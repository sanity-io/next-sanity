{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sanity-io/renovate-config", "github>sanity-io/renovate-config:studio-v3"],
  "packageRules": [
    {
      "group": {
        "semanticCommitType": "chore"
      },
      "matchDepTypes": [
        "dependencies",
        "devDependencies",
        "engines",
        "optionalDependencies",
        "peerDependencies"
      ],
      "matchManagers": ["npm"],
      "semanticCommitType": "chore",
      "description": "Group all dependencies from the app directory",
      "matchFileNames": ["apps/**/package.json"],
      "groupName": "App dependencies"
    },
    {
      "description": "Test against canary versions of next.js",
      "semanticCommitType": "chore",
      "matchDepTypes": ["pnpm.catalog.default"],
      "matchPackageNames": ["@next/env", "next"],
      "followTag": "canary",
      "groupName": "next-canary"
    },
    {
      "matchPackageNames": [
        "@sanity/client",
        "@sanity/comlink",
        "@sanity/image-url",
        "@sanity/presentation-comlink",
        "@sanity/preview-url-secret",
        "@sanity/types",
        "@sanity/webhook",
        "@sanity/visual-editing",
        "@portabletext/react",
        "@portabletext/types",
        "dequal",
        "groq",
        "sanity"
      ],
      "rangeStrategy": "bump",
      "semanticCommitType": "fix"
    }
  ],
  "ignorePresets": [":ignoreModulesAndTests", "github>sanity-io/renovate-config:group-non-major"]
}
