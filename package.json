{
  "name": "next-sanity-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=./packages/*",
    "bump:canaries": "pnpm -r up @sanity/visual-editing@canary && pnpm dedupe",
    "bump:latest": "pnpm -r up @sanity/visual-editing@latest && pnpm dedupe",
    "dev": "turbo dev",
    "format": "oxfmt . --no-error-on-unmatched-pattern && pnpm lint --fix",
    "lint": "oxlint --type-check --type-aware --deny-warnings",
    "prestart": "turbo build",
    "start": "turbo watch build start",
    "test": "turbo test",
    "typegen": "turbo typegen"
  },
  "dependencies": {
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "sanity": "catalog:",
    "styled-components": "catalog:",
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@10.26.0"
}
