{
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev --filter=./apps/*",
    "format": "prettier --cache --ignore-path .gitignore --write .",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "prettier": {
    "bracketSpacing": false,
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 98,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@sanity/block-tools": "3.36.5-canary.42",
    "@sanity/cli": "3.36.5-canary.42",
    "@sanity/client": "^6.15.9",
    "@sanity/diff": "3.36.5-canary.42",
    "@sanity/export": "3.36.5-canary.42",
    "@sanity/import": "3.36.5-canary.42",
    "@sanity/import-cli": "3.36.5-canary.42",
    "@sanity/mutator": "3.36.5-canary.42",
    "@sanity/portable-text-editor": "3.36.5-canary.42",
    "@sanity/schema": "3.36.5-canary.42",
    "@sanity/types": "3.36.5-canary.42",
    "@sanity/util": "3.36.5-canary.42",
    "@sanity/vision": "3.36.5-canary.42",
    "create-sanity": "3.36.5-canary.42",
    "groq": "3.36.5-canary.42",
    "sanity": "3.36.5-canary.42",
    "next": "^14.1.4",
    "styled-components": "6.1.8"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.14",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "turbo": "1.13.2"
  },
  "packageManager": "pnpm@8.15.6",
  "pnpm": {
    "overrides": {
      "@sanity/block-tools": "$@sanity/block-tools",
      "@sanity/cli": "$@sanity/cli",
      "@sanity/client": "$@sanity/client",
      "@sanity/diff": "$@sanity/diff",
      "@sanity/export": "$@sanity/export",
      "@sanity/import": "$@sanity/import",
      "@sanity/import-cli": "$@sanity/import-cli",
      "@sanity/mutator": "$@sanity/mutator",
      "@sanity/portable-text-editor": "$@sanity/portable-text-editor",
      "@sanity/schema": "$@sanity/schema",
      "@sanity/types": "$@sanity/types",
      "@sanity/util": "$@sanity/util",
      "@sanity/vision": "$@sanity/vision",
      "create-sanity": "$create-sanity",
      "groq": "$groq",
      "next": "$next",
      "sanity": "$sanity",
      "styled-components": "$styled-components"
    }
  }
}
