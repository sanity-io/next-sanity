{
  "name": "next-sanity",
  "description": "Sanity.io toolkit for Next.js",
  "version": "0.5.0",
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/next-sanity.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "posttest": "npm run lint",
    "prepublishOnly": "tsdx build && npm test",
    "coverage": "tsdx test --coverage"
  },
  "dependencies": {
    "@sanity/client": "^3.0.6",
    "@sanity/groq-store": "^0.3.0",
    "groq": "^2.15.0"
  },
  "devDependencies": {
    "@async-fn/jest": "^1.5.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.0",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-sanity": "^5.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "react": ">=17.0.2",
    "react-dom": "^17.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": ">=16.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/next-sanity.git"
  },
  "bugs": {
    "url": "https://github.com/sanity-io/next-sanity/issues"
  },
  "homepage": "https://github.com/sanity-io/next-sanity#readme",
  "keywords": [
    "sanity",
    "sanity.io",
    "next.js"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "sanity",
      "sanity/react",
      "sanity/typescript",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "react"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
