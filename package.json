{
  "name": "next-sanity",
  "description": "Sanity.io toolkit for Next.js",
  "version": "0.2.0",
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/next-sanity.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "posttest": "npm run lint",
    "prepublishOnly": "tsdx build && npm test",
    "coverage": "tsdx test --coverage"
  },
  "dependencies": {
    "@sanity/block-content-to-react": "^2.0.7",
    "@sanity/client": "^2.11.0",
    "@sanity/groq-store": "^0.2.0",
    "@sanity/image-url": "^0.140.22",
    "groq": "^2.2.6",
    "use-deep-compare-effect": "^1.6.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.12",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-sanity": "^5.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "react": ">=17.0.2",
    "react-dom": "^17.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": ">=16.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/next-sanity.git"
  },
  "bugs": {
    "url": "https://github.com/sanity-io/next-sanity/issues"
  },
  "homepage": "https://github.com/sanity-io/next-sanity#readme",
  "keywords": [
    "sanity",
    "sanity.io",
    "next.js"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "sanity",
      "sanity/react",
      "sanity/typescript",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "react"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
