{
  "name": "next-sanity-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=./packages/*",
    "predev": "pnpm build",
    "dev": "turbo dev",
    "format": "prettier --cache --write .",
    "bump:canaries": "pnpm -r up @sanity/next-loader@canary @sanity/preview-url-secret@canary @sanity/presentation@canary @sanity/visual-editing@canary && pnpm dedupe",
    "bump:latest": "pnpm -r up @sanity/next-loader@latest @sanity/preview-url-secret@latest @sanity/presentation@latest @sanity/visual-editing@latest && pnpm dedupe",
    "lint": "turbo lint",
    "prestart": "turbo build",
    "start": "turbo watch build start",
    "test": "turbo test",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "15.0.1-canary.1",
    "@next/env": "15.0.1-canary.1",
    "@sanity/presentation": "1.17.0",
    "@sanity/prettier-config": "1.0.3",
    "eslint-config-next": "15.0.1-canary.0",
    "next": "15.0.1-canary.1",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.3",
    "prettier-plugin-tailwindcss": "0.6.8",
    "turbo": "2.2.2"
  },
  "packageManager": "pnpm@9.12.2",
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom",
        "react-is"
      ]
    },
    "overrides": {
      "@next/bundle-analyzer": "$@next/bundle-analyzer",
      "@next/env": "$@next/env",
      "@sanity/presentation": "$@sanity/presentation",
      "eslint-config-next": "$eslint-config-next",
      "next": "$next"
    }
  }
}
