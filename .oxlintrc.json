{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["**/next-env.d.ts"],
  "plugins": [
    "react",
    "react-perf",
    "nextjs",
    "unicorn",
    "typescript",
    "oxc",
    "import",
    "node",
    "import"
  ],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "error"
  },
  "rules": {
    "react-in-jsx-scope": "off",
    "react/rules-of-hooks": "error",
    "jsx-no-new-function-as-prop": "off",
    "jsx-no-new-object-as-prop": "off"
  }
}
